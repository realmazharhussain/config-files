# My custom aliases

alias c='command'
alias s='sudo'
alias q='exit'
alias cd..='cd ..'

type doas &>/dev/null && alias sudo='doas'

alias mkdir='mkdir --parents'
alias chown='sudo chown'
#alias chmod='sudo chmod'

#which wine > /dev/null && alias cmd='wine start cmd'
#which wine > /dev/null && alias cmd='wine cmd'

#alias py3=python3
#alias python=python3

alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ls='ls --color=auto'

#alias ll='ls --almost-all -l --si'
#alias la='ls --almost-all'
#alias l='ls --almost-all -C --classify'

#alias ls='exa --icons --group-directories-first'
alias l='exa --icons --all --group-directories-first --grid'
alias la='exa --icons --group-directories-first --grid'
alias ll='exa --icons --all --group-directories-first --long'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -I'

alias gtc='git commit'
alias gta='git add'
alias gts='git status'
alias gtp='git push'
alias gtl='git log'
alias gtm='git merge'
alias gtd='git diff'
alias gtpl='git pull'
alias gtcl='git clone'
alias gtsw='git switch'

alias locate='plocate'

[ -f ~/pkg-aliases ] && source ~/pkg-aliases
