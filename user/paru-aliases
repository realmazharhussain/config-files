alias paru='paru --color=auto'
alias pacman='pacman --color=auto'

alias ud='paru -Sy'
alias lug='paru -Qu'
alias ug='paru -Su'
alias fug='paru -Syu'

alias udp='sudo pacman -Sy'
alias lugp='pacman -Qu'
alias ugp='sudo pacman -Su'
alias fugp='sudo pacman -Syu'

alias list='paru -Sl'
alias listp='pacman -Sl'
alias show='paru -Sii'
alias showp='pacman -Sii'
alias showf='pacman -Fl'

alias ins='paru -S --needed'
alias insp='sudo pacman -S --needed'
alias lins='pacman -Q'
alias rmv='sudo pacman -Rs'
alias rmvo='sudo pacman -R'

